{
  "name": "linter-explorer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run build:app",
    "build:app": "vite build",
    "build:lib": "BUILD_MODE=lib vite build",
    "lint:prettier": "prettier . \"!libs\" --write",
    "lint:eslint": "eslint . --ext js,jsx --max-warnings 0",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:browser": "vitest run tests/browser",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@astral-sh/ruff-wasm-web": "^0.14.0",
    "express": "^5.1.0",
    "pyodide": "^0.28.2",
    "react": "^18.3.1",
    "react-ace": "^12.0.0",
    "react-dom": "^18.3.1",
    "wouter": "^3.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.47",
    "puppeteer": "^24.20.0",
    "tailwindcss": "^3.4.13",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "dist",
      "libs"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "18.3.1"
      }
    },
    "plugins": [
      "react-refresh"
    ],
    "rules": {
      "react-refresh/only-export-components": [
        "warn",
        {
          "allowConstantExport": true
        }
      ]
    },
    "reportUnusedDisableDirectives": true
  }
}
